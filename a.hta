<html>
<head>
<title>Công cụ mở Calculator</title>
<HTA:APPLICATION
   ID="objSimpleHTA"
   APPLICATIONNAME="CalcLauncher"
   SCROLL="no"
   SINGLEINSTANCE="yes"
   WINDOWSTATE="normal"
>
</head>

<script language="VBScript">
    ' Hàm này sẽ được gọi khi người dùng nhấn nút
    Sub LaunchCalculator()
        ' Tạo một đối tượng Shell để có thể chạy lệnh hệ thống
        Dim objShell
        Set objShell = CreateObject("WScript.Shell")

        ' Sử dụng phương thức Run để thực thi file calc.exe
        objShell.Run "calc.exe"

        ' Dọn dẹp đối tượng sau khi dùng xong (thực hành tốt)
        Set objShell = Nothing
    End Sub
</script>

<body style="font-family: Arial; text-align: center; margin-top: 50px;">

    <h2>Mở ứng dụng Máy tính</h2>
    <p>Nhấn vào nút bên dưới để khởi chạy calc.exe</p>

    <button onclick="LaunchCalculator">Mở Calculator</button>

</body>
</html>
